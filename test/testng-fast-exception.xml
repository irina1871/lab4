<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Fast and Exception Tests Suite" verbose="1">
    <test name="Fast Tests">
        <groups>
            <run>
                <include name="fast"/>
            </run>
        </groups>
        <packages>
            <package name="org.example.*"/>
        </packages>
    </test>
    <test name="Exception Tests">
        <groups>
            <run>
                <include name="exception"/>
            </run>
        </groups>
        <packages>
            <package name="org.example.*"/>
        </packages>
    </test>
</suite>